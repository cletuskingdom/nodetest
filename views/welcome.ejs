
<%- include('layouts/header') %>

<section>
    <div class="container py-5">
        <h1>Home page content</h1>

        <div class="pt-5">
            <% if(message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>

                    <strong><%= message.message %></strong>
                </div>
            <% } %>

            <% if(users != '') { %>
                <div class="table-responsive">
                    <table class="table" data-page-length='5'>
                        <thead class="table-dark text-center my-3">
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <th scope="row"><%= index%></th>
                                    <td>
                                        <img src="<%= row.image %>" height="50" width="50" class="img-thumbnail" />
                                    </td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="./edit/<%= row._id %>" class="text-success">
                                            <i class="fa-lg mx-1 fa fas-solid fa-edit"></i>
                                        </a>
        
                                        <a href="./delete/<%= row._id %>" class="text-danger">
                                            <i class="fa-lg mx-1 fa fas-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% })%>
                        </tbody>
                    </table>
                </div>
            <% } else {%>
                <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
            <%}%>
        </div>
    </div>
</section>

<%- include('layouts/footer') %>